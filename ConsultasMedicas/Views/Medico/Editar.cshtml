@model ConsultasMedicas.Models.Medico

@{
    ViewData["Title"] = "Editar Médico";
}

<h1>Editar Médico</h1>

<form asp-action="Editar">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone" class="control-label"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CPF" class="control-label"></label>
        <input asp-for="CPF" class="form-control" />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CRM" class="control-label"></label>
        <input asp-for="CRM" class="form-control" />
        <span asp-validation-for="CRM" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdSexo" class="control-label"></label>
        <select asp-for="IdSexo" class="form-control" asp-items="ViewBag.Sexo"></select>
        <span asp-validation-for="IdSexo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdConsultorio" class="control-label"></label>
        <select asp-for="IdConsultorio" class="form-control" asp-items="ViewBag.Consultorio"></select>
        <span asp-validation-for="IdConsultorio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdEspecialidade" class="control-label"></label>
        <select asp-for="IdEspecialidade" class="form-control" asp-items="ViewBag.Especialidade"></select>
        <span asp-validation-for="IdEspecialidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}