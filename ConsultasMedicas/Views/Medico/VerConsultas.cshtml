@model IEnumerable<Consulta>

@{
    ViewData["Title"] = "Consultas do Médico";
}

<h1>Consultas do Médico</h1>

<table id="tabela" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Data</th>
            <th>Horário</th>
            <th>Cliente</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var consulta in Model)
        {
            <tr>
                <td>@consulta.Data.ToShortDateString()</td>
                <td>@consulta.Horario</td>
                <td>@consulta.Cliente?.Nome</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@consulta.IdConsulta" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Deletar" asp-route-id="@consulta.IdConsulta" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    <script>
                   $(document).ready(function () {
            $('#tabela').DataTable({
                language: {
                    url: "https://cdn.datatables.net/plug-ins/2.2.2/i18n/pt-BR.json"
                }
            });
        });

    </script>
}
