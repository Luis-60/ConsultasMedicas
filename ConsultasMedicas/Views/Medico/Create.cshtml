@model Medico

<form asp-controller="Medico" asp-action="Create" method="post">
	<div class="d-flex" style="flex-direction: column; gap:25px">
		
		<div class="form-group" style="100%">
			<div class="col-md-2">
				<label asp-for="IdMedico" class="form-label"></label>
			</div>
			<div>
				<input type="text" asp-for="IdMedico" class="form-control"/>
				<span asp-validation-for="IdMedico" class="text-danger"></span>
			</div>
		</div>
		
		<div class="form-group" style="100%">
			<div class="col-md-2">
				<label asp-for="Nome" class="form-label"></label>
			</div>
			<div>
				<input type="text" asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row" style="width:100%">
			<div class="col-md-2">
				<label asp-for="Especialidade" class="form-label"></label>
			</div>
			<div>
				<select class="form-select" asp-for="idEspecialidade" asp-items="@ViewBag.Especialidade" class="form-control">
					<option value="">Selecione uma Especialidade</option>
				</select>
			</div>
		</div>

		<div class="form-group row" style="width:100%">
			<div class="col-md-2">
				<label asp-for="Consultorio" class="form-label"></label>
			</div>
			<div>
				<select class="form-select" asp-for="idConsultorio" asp-items="@ViewBag.Especialidade" class="form-control">
					<option value="">Selecione uma Consultório</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<input type="submit" value="Create" class="btn btn-primary" />
		</div>
	</div>
</form>

<div>
	<a asp-action="Index">Back to List</a>
</div>